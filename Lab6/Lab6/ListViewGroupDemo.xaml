<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab6.ListViewGroupDemo">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="listViewSeccions" 
                ItemsSource="{Binding Seccions}"
                      IsGroupingEnabled="True"
                      GroupDisplayBinding="{Binding Secciones}"
                      GroupShortNameBinding="{Binding Alumnos}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding NombreCompleto}"
                                  TextColor="Black"></Label>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>